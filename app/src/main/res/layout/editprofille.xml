<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/black"
    android:padding="10dp">

    <EditText
        android:id="@+id/dialogbio"
        android:padding="8dp"
        android:hint="Bio"
        android:textColorHint="@color/white"
        android:textColor="@color/white"
        android:background="@drawable/edit_background"
        android:textSize="20sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <EditText
        android:id="@+id/dialogphone"
        android:padding="8dp"
        android:hint="Phone Number"
        android:textColorHint="@color/white"
        android:textColor="@color/white"
        android:background="@drawable/edit_background"
        android:textSize="20sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <EditText
        android:id="@+id/dialogfb"
        android:padding="8dp"
        android:hint="Facebook Id"
        android:textColorHint="@color/white"
        android:textColor="@color/white"
        android:background="@drawable/edit_background"
        android:textSize="20sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <EditText
        android:id="@+id/dialogaddress"
        android:hint="Address"
        android:padding="8dp"
        android:textColorHint="@color/white"
        android:textColor="@color/white"
        android:inputType="text"
        android:background="@drawable/edit_background"
        android:textSize="20sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">
        <Button
            android:id="@+id/dialogUpdateBtn"
            android:text="Update"
            android:backgroundTint="#535353"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <Button
            android:id="@+id/dialogCancelBtn"
            android:text="Cancel"
            android:backgroundTint="#535353"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

</LinearLayout>